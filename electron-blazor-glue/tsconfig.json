{
    "compileOnSave": true,
    "compilerOptions": {   

      "module": "commonjs", /* es2015 */
      "moduleResolution": "node",
      "target": "es5",      
      "lib": ["es2015", "dom"],
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true, /* set to true if exported types should be visible*/
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,      
      "noImplicitAny": false,
      "noEmitOnError": true,
      "removeComments": false,    
      "downlevelIteration": true,
      "strict": true
    }
  }